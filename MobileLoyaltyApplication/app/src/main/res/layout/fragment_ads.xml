<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:gravity="top"
                                                   android:orientation="vertical"
>

    <TextView
            android:text="@string/ads_title"
            android:textAlignment="center"
            android:layout_width="match_parent"
            style="@style/tag_name" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/textView5"/>
    <TextView
            style="@style/tag_name"
            android:text="@string/ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" android:id="@+id/textView6"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"/>
     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:ems="10"
            android:id="@+id/ads_edit"
            app:layout_constraintStart_toEndOf="@+id/textView6" android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp" app:layout_constraintTop_toTopOf="@+id/textView6"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"/>


</androidx.constraintlayout.widget.ConstraintLayout>