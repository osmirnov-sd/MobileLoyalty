<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
>

    <TextView android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:text="@string/QR"
              android:textAlignment="center"
              android:textSize="@dimen/text_size"

              android:textColor="@android:color/black" app:layout_constraintStart_toStartOf="parent"
              android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
              app:layout_constraintTop_toTopOf="parent" android:id="@+id/qr_textView"/>

    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/image_qr"
               android:contentDescription="@string/image_qr"
               app:layout_constraintTop_toBottomOf="@+id/qr_textView"
               app:layout_constraintStart_toStartOf="@+id/qr_textView"
               app:layout_constraintEnd_toEndOf="@+id/qr_textView"
               android:layout_marginTop="@dimen/activity_vertical_margin"/>

</androidx.constraintlayout.widget.ConstraintLayout>